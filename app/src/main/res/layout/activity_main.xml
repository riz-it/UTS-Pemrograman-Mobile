<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="12dp"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registrasi Mahasiswa"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/hkgroteskbold"
                android:textSize="18dp"/>
            <TextView
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isikan biodata diri kamu untuk dapat mengikuti Ujian Tengah Semester Universitas Merdeka Malang."
                android:textAlignment="center"
                android:textColor="@color/grey_500"
                android:fontFamily="@font/hkgroteskmedium"
                android:textSize="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingHorizontal="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Induk Kependudukan"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:fontFamily="@font/hkgroteskbold"
                android:textSize="12dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="2dp"
                android:visibility="visible"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                android:orientation="horizontal"
                android:background="@drawable/edt_background">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/baseline_credit_card_24"/>
                <EditText
                    android:id="@+id/et_nik"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:paddingHorizontal="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="7dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hkgroteskmedium"
                    android:drawablePadding="10dp"
                    android:hint="xxxxxxxxxxx"
                    android:maxLength="16"
                    android:textSize="14dp"
                    android:background="@null"
                    android:textColorHint="@color/grey_400"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIK harus berisi 16 karakter angka."
                android:textAlignment="center"
                android:textColor="@color/grey_500"
                android:fontFamily="@font/hkgrotesksemibold"
                android:textSize="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingHorizontal="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:fontFamily="@font/hkgroteskbold"
                android:textSize="12dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="2dp"
                android:visibility="visible"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                android:orientation="horizontal"
                android:background="@drawable/edt_background">
                <EditText
                    android:id="@+id/et_namaLengkap"
                    android:layout_width="match_parent"
                    android:inputType="text"
                    android:paddingBottom="10dp"
                    android:paddingTop="7dp"
                    android:fontFamily="@font/hkgroteskmedium"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:hint="Isikan lengkap kamu"
                    android:textSize="14dp"
                    android:background="@null"
                    android:textColorHint="@color/grey_400"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hkgrotesksemibold"
                android:text="Pastikan nama sesuai dengan KTP."
                android:textAlignment="center"
                android:textColor="@color/grey_500"
                android:textStyle="bold"
                android:textSize="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingHorizontal="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:fontFamily="@font/hkgroteskbold"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="12dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="2dp"
                android:visibility="visible"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:orientation="horizontal"
                android:background="@drawable/edt_background">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/baseline_calendar_today_24"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TableRow>
                        <EditText
                            android:id="@+id/et_tanggalLahir"
                            android:layout_width="match_parent"
                            android:focusableInTouchMode="true"
                            android:cursorVisible="false"
                            android:focusable="false"
                            android:paddingHorizontal="10dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="7dp"
                            android:fontFamily="@font/hkgroteskmedium"
                            android:layout_height="wrap_content"
                            android:drawablePadding="10dp"
                            android:hint="dd/mm/yyyy"
                            android:layout_weight="2"
                            android:textSize="14dp"
                            android:background="@null"
                            android:textColorHint="@color/grey_400"/>
                        <TextView
                            android:id="@+id/txt_umur"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:paddingBottom="10dp"
                            android:paddingTop="7dp"
                            android:layout_height="wrap_content"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/hkgroteskmedium"
                            android:textAlignment="center"
                            android:layout_weight="1"
                            android:text="(XX Tahun)"
                            android:textStyle="italic"
                            android:textSize="12dp"
                            android:background="@null"
                            android:textColorHint="@color/grey_400"/>
                    </TableRow>

                </TableLayout>

            </LinearLayout>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hkgrotesksemibold"
                android:text="Pilih tanggal lahir sesuai dengan KTP."
                android:textAlignment="center"
                android:textColor="@color/grey_500"
                android:textSize="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingHorizontal="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tempat Lahir"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:fontFamily="@font/hkgroteskbold"
                android:textSize="12dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="2dp"
                android:visibility="visible"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                android:orientation="horizontal"
                android:background="@drawable/edt_background">
                <EditText
                    android:id="@+id/et_tempatLahir"
                    android:layout_width="match_parent"
                    android:paddingBottom="10dp"
                    android:paddingTop="7dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hkgroteskmedium"
                    android:drawablePadding="10dp"
                    android:hint="Kota kelahiran"
                    android:textSize="14dp"
                    android:background="@null"
                    android:textColorHint="@color/grey_400"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/hkgrotesksemibold"
                android:text="Masukan kota lahir sesuai KTP."
                android:textAlignment="center"
                android:textColor="@color/grey_500"
                android:textStyle="bold"
                android:textSize="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingHorizontal="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:fontFamily="@font/hkgroteskbold"
                android:textSize="12dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="2dp"
                android:visibility="visible"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                android:orientation="horizontal"
                android:background="@drawable/edt_background">
                <EditText
                    android:id="@+id/et_alamat"
                    android:layout_width="match_parent"
                    android:paddingBottom="10dp"
                    android:paddingTop="7dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:hint="Alamat lengkap"
                    android:minLines="2"
                    android:textSize="14dp"
                    android:fontFamily="@font/hkgroteskmedium"
                    android:background="@null"
                    android:textColorHint="@color/grey_400"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masukan alamat domisili lahir."
                android:textAlignment="center"
                android:textColor="@color/grey_500"
                android:fontFamily="@font/hkgrotesksemibold"
                android:textSize="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingHorizontal="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:fontFamily="@font/hkgroteskbold"
                android:textSize="12dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="2dp"
                android:visibility="visible"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="6dp"
                android:orientation="horizontal"
                android:background="@drawable/edt_background">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="0dp"
                            android:paddingTop="0dp"
                            android:layout_weight="10"
                            android:spinnerMode="dropdown"
                            android:id="@+id/sp_jenisKelamin"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingHorizontal="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kewarganegaraan"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:fontFamily="@font/hkgroteskbold"
                android:textSize="12dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="2dp"
                android:visibility="visible"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/edt_background">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingTop="4dp"
                    android:orientation="horizontal">
                    <TableRow>
                        <RadioGroup
                            android:id="@+id/rg_kewarganegaraan"
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rb_wni"
                                android:textSize="12dp"
                                android:fontFamily="@font/hkgroteskmedium"
                                android:text="WNI"
                                android:scaleX="0.8"
                                android:scaleY="0.8"/>
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rb_wna"
                                android:textSize="12dp"
                                android:text="WNA"
                                android:fontFamily="@font/hkgroteskmedium"
                                android:scaleX="0.8"
                                android:scaleY="0.8"/>
                        </RadioGroup>
                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingHorizontal="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bidang Kompetensi"
                android:fontFamily="@font/hkgroteskbold"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="12dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="2dp"
                android:visibility="visible"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/edt_background">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingVertical="4dp"
                    android:orientation="vertical">
                    <TableRow>
                        <CheckBox android:id="@+id/checkbox_devIt"
                            android:layout_width="wrap_content"
                            android:textSize="12dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/hkgroteskmedium"
                            android:text="Development &amp; IT"/>
                        <CheckBox android:id="@+id/checkbox_aiService"
                            android:layout_width="wrap_content"
                            android:textSize="12dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/hkgroteskmedium"
                            android:layout_height="wrap_content"
                            android:text="AI Service"/>
                    </TableRow>
                    <TableRow>
                        <CheckBox android:id="@+id/checkbox_designCreative"
                            android:layout_width="wrap_content"
                            android:textSize="12dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/hkgroteskmedium"
                            android:layout_weight="1"
                            android:text="Design Creative" />
                        <CheckBox android:id="@+id/checkbox_writing"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:textSize="12dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/hkgroteskmedium"
                            android:text="Writing"/>
                    </TableRow>
                    <TableRow>
                        <CheckBox android:id="@+id/checkbox_finance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:fontFamily="@font/hkgroteskmedium"
                            android:layout_weight="1"
                            android:text="Finance &amp; Accounting" />

                    </TableRow>

                </TableLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingHorizontal="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:fontFamily="@font/hkgroteskbold"
                android:textStyle="bold"
                android:textSize="12dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="2dp"
                android:visibility="visible"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingHorizontal="10dp"
                android:orientation="horizontal"
                android:background="@drawable/edt_background">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/baseline_email_24"/>
                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="10dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="7dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:hint="xxxxxxx@xxxx.xx"
                    android:fontFamily="@font/hkgroteskmedium"
                    android:textSize="14dp"
                    android:background="@null"
                    android:textColorHint="@color/grey_400"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gunakan surel/email yang aktif."
                android:textAlignment="center"
                android:textColor="@color/grey_500"
                android:fontFamily="@font/hkgrotesksemibold"
                android:textSize="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_transparent"
                android:textSize="14dp"
                android:paddingVertical="21dp"
                android:paddingHorizontal="40dp"
                android:textColor="@color/orange_600"
                android:fontFamily="@font/hkgroteskbold"
                android:text="Reset"
                />
            <View
                android:layout_width="25dp"
                android:layout_height="50dp"
                android:layout_marginVertical="2dp"
                android:visibility="visible"/>
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_primary"
                android:textSize="14dp"
                android:fontFamily="@font/hkgroteskbold"
                android:paddingVertical="15dp"
                android:paddingHorizontal="40dp"
                android:textColor="@color/white"
                android:text="Submit"
                />
        </LinearLayout>
    </LinearLayout>

</ScrollView>